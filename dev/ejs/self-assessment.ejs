    <%- include('inc/_footerv2'); %>
        <script>
            // Click change background checkbox
            $('.c-table--orange input').each(function() {
                if ($(this).is(':checked')) {
                    $(this).parent().css({
                        "backgroundColor": "rgba(228, 168, 105, 0.5)"
                    });
                };
                $(this).change(function() {
                    if (this.checked) {
                        $(this).parent().css({
                            "backgroundColor": "rgba(228, 168, 105, 0.5)"
                        });
                    } else {
                        $(this).parent().css({
                            "backgroundColor": "transparent"
                        });

                    }
                });
            });
            //Setting mixed-chart
            new Chart(document.getElementById("mixed-chart"), {
                type: 'bar',
                data: {
                    labels: ["仕事好き", "仲間好き", "会社好き", "責任"],
                    datasets: [{
                        label: "3回平均",
                        type: "line",
                        borderColor: "#ed7d31",
                        data: [408, 547, 675, 734],
                        fill: false
                    }, {
                        label: "前々回",
                        type: "bar",
                        backgroundColor: "#bfbfbf",
                        data: [408, 547, 675, 734],
                    }, {
                        label: "前回",
                        type: "bar",
                        backgroundColor: "#ffe699",
                        data: [133, 221, 783, 2478]
                    }, {
                        label: "今回",
                        type: "bar",
                        backgroundColor: "#e4a869",
                        data: [33, 226, 983, 2178]
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: 'bottom',
                            fillStyle: '#000',
                            strokeStyle: '#000',
                        },

                    }
                }
            });
        </script>