<%- include('inc/_headerv2'); %>
    <!--▼ Header ▼-->
    <header class="c-headerv2">
        <a href="javascript:history.back()" class="c-headerv2__back">
            <i class="fa-solid fa-angle-left"></i>
        </a>

        <p>
            アンケート
        </p>
    </header>
    <!--▲ Header ▲-->
    <!--▼ Content area ▼-->
    <main class="p-question">
        <div class="c-question">
            <div class="c-question__body">

                <p class="c-question__heading">今日の仕事は楽しかったですか？</p>
                <div class="c-question__item">
                    <input type="radio" id="1" name="question" value="1">
                    <label for="1">快晴</label><br>
                    <input type="radio" id="2" name="question" value="2">
                    <label for="2">晴れ</label><br>
                    <input type="radio" id="3" name="question" value="3">
                    <label for="3">曇り</label><br>
                    <input type="radio" id="4" name="question" value="4">
                    <label for="4">雨</label>
                </div>
                <div class="c-question__progress">
                    <p class="c-question__progress__text">回答進捗率 <span>15%</span></p>
                    <div class="c-question__progress__percent">
                        <span style="width: 15%"></span>
                    </div>
                </div>
                <div class="c-question__control">
                    <a href="#" class="c-btnprev">前へ</a>
                    <a href="#" class="c-btnnext">次へ</a>
                </div>

            </div>

        </div>
    </main>
    <!--▲ Content are ▲-->
    <%- include('inc/_footer'); %>